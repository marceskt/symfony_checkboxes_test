{% extends "base.html.twig" %}

{% block content %}
    <h3>{% if profile is defined %}Modificar {% endif %}Perfil</h3>
    <form action="" method="post">
        <p>
            <label for="name">Nombre del perfil</label>
            <input
                type="text"
                name="name"
                id="name"
                {% if profile.name is defined %}
                    value="{{ profile.name }}"
                {% endif %}
            />
        </p>
        <ul>
            {% for permission in permissions %}
                <li>
                    <label for="permiso_{{ permission.name }}">
                        <input
                            type="checkbox"
                            name="permissions[]"
                            id="permission_{{ permission.id }}"
                            value="{{ permission.id }}"
                            {% if permission.checked %}
                                checked="checked"
                            {% endif %}
                        />
                        {{ permission.name }}
                    </label>
                </li>
            {% endfor %}
        </ul>
        <button type="submit">Aceptar</button>
        <a href="{{ absolute_url('/') }}">Volver</a>
    </form>
{% endblock %}
